MDScreen:
    MDBoxLayout:
        padding: 20

        MDBoxLayout:
            orientation: 'horizontal'
            spacing: 10

            MDBoxLayout:
                size_hint_x: 0.3

                MDScrollView:
                    MDList:
                        id: cameras_list
                        size_hint_y: None
                        spacing: 20

            MDBoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.7

                MDBoxLayout:
                    size_hint_y: 0.7
                    padding: 10

                    MainCamera:
                        id: main_camera

                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint_y: 0.3

                    MDBoxLayout:
                        orientation: 'vertical'
                        size_hint_y: 0.15

                        MDLabel:
                            id: camera_name
                            text: 'Camera: '

                        MDLabel:
                            id: total_time
                            text: 'Total time: '

                    MDBoxLayout:
                        orientation: 'vertical'
                        size_hint_y: 0.85

                        MDGridLayout:
                            size_hint_y: 0.3
                            cols: 4
                            rows: 1

                            MDLabel:
                                text: 'Zone name'
                            MDLabel:
                                text: 'Occupation time'
                            MDLabel:
                                text: 'Intervals num & avg'
                            MDLabel:
                                text: 'Persons avg'

                        MDScrollView:
                            MDGridLayout:
                                size_hint_y: None
                                id: metrics
                                cols: 6
